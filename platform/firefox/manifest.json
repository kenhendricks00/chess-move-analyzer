{
    "manifest_version": 2,
    "name": "Chess Analyzer for Firefox",
    "version": "1.0",
    "description": "Analyze and solve your Chess.com games with real-time suggestions.",
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "*://www.chess.com/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://www.chess.com/*"],
        "js": ["content.js"]
      }
    ]
  }